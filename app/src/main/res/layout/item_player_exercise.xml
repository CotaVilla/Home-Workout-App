<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exercise_container"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:background="@drawable/container_item">

    <TextView
        android:id="@+id/exercise_position"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:text="#100"
        android:layout_marginStart="10dp"
        style="@style/player_title"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:textAppearance="@style/player_title"
        android:layout_weight="1"
        android:text="Ejercicios abdominales"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/exercise_duration"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Duracion: 00:00:00"
        style="@style/player_fase"
        tools:ignore="HardcodedText" />


</LinearLayout>