<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/container_options"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:weightSum="5">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp">

    <TextView
        android:id="@+id/rutine_options_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:text="Example text"
        android:textAppearance="@style/options_title"
        tools:ignore="HardcodedText" />
</RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rutine_option_play"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        android:text="@string/dialog_reproduce"
        android:textAppearance="@style/options_content" />

    <TextView
        android:id="@+id/rutine_option_edit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        android:text="@string/dialog_edit"
        android:textAppearance="@style/options_content" />
    <TextView
        android:id="@+id/rutine_option_duplicate"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        android:text="@string/dialog_duplicate"
        android:textAppearance="@style/options_content" />
    <TextView
        android:id="@+id/rutine_option_delete"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        android:text="@string/dialog_delete"
        android:textAppearance="@style/options_content" />

</LinearLayout>

</LinearLayout>